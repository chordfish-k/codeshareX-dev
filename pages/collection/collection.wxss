.posterBox{
  padding: 12rpx;
  width: 97%;
  display: flex;
  vertical-align: center;
  line-height: 60rpx;
  margin: 14rpx;
  margin-bottom: 20rpx;
  background-color: white;
  border-radius: 10rpx;
}

.posterMessg{
  width: 100%;
  margin-left: 25rpx;
}

.posterName{
  font-weight: bold;
  font-size:13px;
  margin-top: 6rpx;
  margin-right: 25rpx;
}
.posterTimeStamp{
  font-size: 10px;
}

.posterFace{
  width:95rpx;
  height:95rpx;
  border-radius: 50%;
}

.detail{
  font-size: 13px;
  width: auto;
  height: auto;
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  margin-left: 14rpx;
  margin-right: 14rpx;
  border-radius: 10rpx;
  padding: 12rpx;
  background-color: #eee; 
}

.posterContent{

  float:left;
  width:100%;
  height: auto;
  margin-left: 10rpx;
}
.fixedBtn{
  position: fixed; 
  bottom: 5%; 
  width: 100%; 
  height: 100rpx;
  z-index: 9;
}

